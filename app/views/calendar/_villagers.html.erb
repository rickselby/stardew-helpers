<div class="text-center mb-3">
  <% @people.each do |person| %>
    <%= link_to image_tag("/villager/#{person.name}", class: [:portrait, @person == person ? :'portrait-active' : nil ], alt: person.name, title: person.name),
                calendar_index_url(person: person.name, season: @season, day: @day) %>
  <% end %>
</div>
